{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["api/*"],
      "@lib/*": ["api/lib/*"],
      "@middleware/*": ["api/middleware/*"],
      "@convex/*": ["convex/*"],
      "@v1/*": ["api/v1/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
